<% if notice %>
<p id = "notice"><%= notice %></p>
<% end %>

<h1>Welcome!</h1>


<% @entries.each do |entry| %>
  <div class = "post">  	
    <h3><%=link_to entry.title, entry_path(entry.id)%></h3><br/>
    <%= image_tag entry.image.url(:thumb) %>    
    <p><%= truncate(strip_tags(entry.description), length: 30) %></p>    
  </div>

<% end %>
<%= paginate @entries %>